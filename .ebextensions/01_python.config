container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python juegos_mentales_django/manage.py migrate --noinput"
    leader_only: true
option_settings: 
  "aws:elasticbeanstalk:application:environment": 
    DJANGO_SETTINGS_MODULE: "juegos_mentales_django.settings" 
    "PYTHONPATH": "/var/app/current:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python": 
    WSGIPath: juegos_mentales_django.wsgi:application 
    NumProcesses: 3 
    NumThreads: 20 